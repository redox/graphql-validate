{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strictNullChecks": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
